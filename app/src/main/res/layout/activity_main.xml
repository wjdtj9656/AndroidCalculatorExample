<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/main_result_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorGray"
        android:gravity="end"
        android:padding="10dp"
        android:text="0"
        android:textColor="@color/colorWhite"
        android:textSize="50sp"


        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_result_textview"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="5">


        <Button
            android:id="@+id/main_btn_ac"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnSpan="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="AC"
            android:textSize="30sp" />

        <Button
            android:id="@+id/main_btn_devide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/colorOrange"
            android:textColor="@color/colorWhite"
            android:text="/"
            android:textSize="20sp" />


        <Button
            android:id="@+id/main_btn_7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="7"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/main_btn_8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="8"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/main_btn_9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="9"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/main_btn_mul"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/colorOrange"
            android:textColor="@color/colorWhite"
            android:text="*"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/main_btn_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="4"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/main_btn_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="5"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/main_btn_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="6"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/main_btn_minu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/colorOrange"
            android:textColor="@color/colorWhite"
            android:text="-"
            android:textSize="20sp"/>


        <Button
            android:id="@+id/main_btn_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="1"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/main_btn_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="2"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/main_btn_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="3"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/main_btn_plus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/colorOrange"
            android:textColor="@color/colorWhite"
            android:text="+"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/main_btn_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnSpan="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="0"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/main_btn_equals"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/colorOrange"
            android:textColor="@color/colorWhite"
            android:text="="
            android:textSize="20sp"/>


    </GridLayout>
</RelativeLayout>
